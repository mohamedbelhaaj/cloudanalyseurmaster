pipeline {
    agent {
        docker {
            image 'node:22.14.0-alpine'
            args '--privileged -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_TOKEN = credentials('SONAR-TOKEN1')
        SONAR_HOST_URL = 'http://sonarqube:9000'
        DOCKER_IMAGE = 'mohamedbelhaj/angular'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    }

    stages {
        stage('Setup Environment') {
            steps {
                script {
                    echo "üîß Configuration de l'environnement..."
                    sh '''
                        echo "Node.js version:"
                        node --version
                        echo "NPM version:"
                        npm --version
                        echo "Docker version:"
                        docker --version
                    '''
                }
            }
        }

        stage('Checkout') {
            steps {
                echo "üì• R√©cup√©ration du code..."
                git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'
                echo "‚úÖ Code r√©cup√©r√©"
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "üì¶ Installation des d√©pendances..."
                sh 'npm ci --legacy-peer-deps || npm install --legacy-peer-deps'
                echo "‚úÖ D√©pendances install√©es"
            }
        }

        stage('Build Angular') {
            steps {
                echo "üî® Construction de l'application Angular..."
                sh 'npm run build -- --configuration production'
                echo "‚úÖ Build Angular r√©ussi"
                
                // Archive des artefacts
                archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
            }
        }

        stage('Test Docker Access') {
            steps {
                script {
                    echo "üîç Test de l'acc√®s Docker..."
                    sh '''
                        docker --version
                        docker info || echo "‚ö†Ô∏è Docker info a √©chou√© mais continue..."
                        docker ps || echo "‚ö†Ô∏è Docker ps a √©chou√© mais continue..."
                        ls -la /var/run/docker.sock || echo "‚ö†Ô∏è Socket Docker non trouv√©"
                    '''
                    echo "‚úÖ Tests Docker termin√©s"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    echo "üìä Analyse de la qualit√© du code avec SonarQube..."
                    try {
                        sh """
                            npx sonar-scanner \
                            -Dsonar.projectKey=angular \
                            -Dsonar.sources=src \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.token=${SONAR_TOKEN} \
                            -Dsonar.scm.disabled=true \
                            -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info \
                            -Dsonar.test.exclusions=**/*.spec.ts,**/*.test.ts \
                            -Dsonar.coverage.exclusions=**/*.spec.ts,**/*.test.ts,**/environments/** || echo "‚ö†Ô∏è SonarQube a √©chou√© mais le pipeline continue"
                        """
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Analyse SonarQube ignor√©e: ${e.message}"
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                echo "üß™ Ex√©cution des tests..."
                sh 'npm test -- --watch=false --browsers=ChromeHeadless --code-coverage || echo "‚ö†Ô∏è Tests √©chou√©s mais continuation du pipeline"'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Construction de l'image Docker..."
                    try {
                        // V√©rification du Dockerfile
                        sh 'test -f Dockerfile && echo "‚úÖ Dockerfile trouv√©" || { echo "‚ùå Dockerfile manquant"; exit 1; }'
                        
                        // Construction de l'image
                        sh """
                            docker build \
                                --pull \
                                --no-cache \
                                -t ${DOCKER_IMAGE}:${DOCKER_TAG} \
                                -t ${DOCKER_IMAGE}:latest \
                                .
                        """
                        
                        // V√©rification de l'image
                        sh "docker images | grep ${DOCKER_IMAGE}"
                        echo "‚úÖ Image Docker cr√©√©e avec succ√®s"
                        
                    } catch (Exception e) {
                        echo "‚ùå Erreur lors de la construction Docker: ${e.message}"
                        // Tentative alternative avec BuildKit
                        sh """
                            DOCKER_BUILDKIT=1 docker build \
                                -t ${DOCKER_IMAGE}:${DOCKER_TAG} \
                                -t ${DOCKER_IMAGE}:latest \
                                . || echo "‚ùå Build alternatif √©chou√© aussi"
                        """
                        error "Build Docker d√©finitivement √©chou√©"
                    }
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    echo "üîí Scan de s√©curit√© de l'image Docker..."
                    try {
                        sh """
                            docker scan --version || echo "Docker Scan non disponible"
                            docker scan ${DOCKER_IMAGE}:${DOCKER_TAG} --file=Dockerfile --exclude-base || echo "Scan de s√©curit√© ignor√©"
                        """
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Scan de s√©curit√© ignor√©: ${e.message}"
                    }
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    echo "üì§ Envoi vers DockerHub..."
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'DOCKER_USERNAME',
                        passwordVariable: 'DOCKER_PASSWORD'
                    )]) {
                        try {
                            sh """
                                echo \"\${DOCKER_PASSWORD}\" | docker login -u \"\${DOCKER_USERNAME}\" --password-stdin
                                docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                                docker push ${DOCKER_IMAGE}:latest
                                docker logout
                            """
                            echo "‚úÖ Images pouss√©es avec succ√®s vers DockerHub"
                            
                        } catch (Exception e) {
                            echo "‚ùå Erreur lors du push DockerHub: ${e.message}"
                            // Tentative de relogin et retry
                            sh """
                                docker logout
                                echo \"\${DOCKER_PASSWORD}\" | docker login -u \"\${DOCKER_USERNAME}\" --password-stdin
                                docker push ${DOCKER_IMAGE}:${DOCKER_TAG} || echo "Push tag sp√©cifique √©chou√©"
                                docker push ${DOCKER_IMAGE}:latest || echo "Push latest √©chou√©"
                            """
                            error "Push DockerHub d√©finitivement √©chou√©"
                        }
                    }
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo "üßπ Nettoyage..."
                sh '''
                    docker system prune -f || true
                    npm cache clean --force || true
                '''
            }
        }
    }

    post {
        always {
            echo "üìä =========================================="
            echo "üìä RAPPORT DE BUILD #${BUILD_NUMBER}"
            echo "üìä Statut: ${currentBuild.currentResult}"
            echo "üìä Dur√©e: ${currentBuild.durationString}"
            echo "üìä =========================================="
            
            // Nettoyage finale
            sh 'docker system prune -f || true'
        }
        
        success {
            echo """
                ‚úÖ ==========================================
                ‚úÖ üéâ PIPELINE R√âUSSIE! üéâ
                ‚úÖ ==========================================
                ‚úÖ Build: ${BUILD_NUMBER}
                ‚úÖ Image: ${DOCKER_IMAGE}:${DOCKER_TAG}
                ‚úÖ DockerHub: https://hub.docker.com/r/mohamedbelhaj/angular
                ‚úÖ ==========================================
            """
            
            // Notification de succ√®s
            emailext (
                subject: "‚úÖ SUCC√àS Build #${BUILD_NUMBER} - Angular App",
                body: """
                La pipeline Jenkins a r√©ussi !
                
                D√©tails:
                - Build: ${BUILD_NUMBER}
                - Image: ${DOCKER_IMAGE}:${DOCKER_TAG}
                - Dur√©e: ${currentBuild.durationString}
                - Lien: ${env.BUILD_URL}
                
                Les images Docker ont √©t√© pouss√©es avec succ√®s vers DockerHub.
                """,
                to: "mohamed.belhaj@example.com"
            )
        }
        
        failure {
            echo """
                ‚ùå ==========================================
                ‚ùå PIPELINE √âCHOU√âE
                ‚ùå ==========================================
                ‚ùå Build: ${BUILD_NUMBER}
                ‚ùå Cause: ${currentBuild.result}
                ‚ùå ==========================================
            """
            
            // Notification d'√©chec
            emailext (
                subject: "‚ùå √âCHEC Build #${BUILD_NUMBER} - Angular App",
                body: """
                La pipeline Jenkins a √©chou√© !
                
                D√©tails:
                - Build: ${BUILD_NUMBER}
                - Statut: ${currentBuild.result}
                - Dur√©e: ${currentBuild.durationString}
                - Lien: ${env.BUILD_URL}
                
                Veuillez v√©rifier les logs pour plus de d√©tails.
                """,
                to: "mohamed.belhaj@example.com"
            )
        }
        
        unstable {
            echo "‚ö†Ô∏è Pipeline instable - v√©rifiez les tests ou la qualit√© du code"
        }
        
        changed {
            echo "üîÑ Statut chang√©: pr√©c√©dent ${currentBuild.previousBuild?.result ?: 'N/A'}, actuel ${currentBuild.result}"
        }
    }

    options {
        timeout(time: 30, unit: 'MINUTES')
        retry(2)
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps()
    }

    parameters {
        choice(
            name: 'DEPLOY_ENV',
            choices: ['dev', 'staging', 'prod'],
            description: 'Environnement de d√©ploiement'
        )
        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: true,
            description: 'Ex√©cuter les tests'
        )
        booleanParam(
            name: 'SONAR_ANALYSIS',
            defaultValue: true,
            description: 'Ex√©cuter l analyse SonarQube'
        )
    }
}