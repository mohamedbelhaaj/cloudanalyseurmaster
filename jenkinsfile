pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('SONAR-TOKEN1')
        SONAR_HOST_URL = 'http://sonarqube:9000'
        DOCKER_IMAGE = 'mohamedbelhaj/angular'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'
                echo "‚úÖ Code r√©cup√©r√©"
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "üì¶ Installation des d√©pendances..."
                sh 'npm install --legacy-peer-deps'
            }
        }

        stage('Build Angular') {
            steps {
                echo "üî® Build Angular..."
                sh 'npm run build -- --configuration production'
                echo "‚úÖ Build r√©ussi"
            }
        }

        stage('Test Docker Access') {
            steps {
                script {
                    echo "üîç Test de l'acc√®s Docker..."
                    
                    // Test 1: Version Docker
                    sh 'docker --version'
                    
                    // Test 2: Docker info
                    sh 'docker info || echo "Docker info failed"'
                    
                    // Test 3: Lister les conteneurs
                    sh 'docker ps || echo "Docker ps failed"'
                    
                    // Test 4: Permissions du socket
                    sh 'ls -la /var/run/docker.sock || echo "Socket not found"'
                    
                    echo "‚úÖ Tests Docker termin√©s"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    echo "üìä Analyse SonarQube..."
                    try {
                        sh """
                            npx sonar-scanner \
                            -Dsonar.projectKey=angular-app \
                            -Dsonar.sources=src \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.token=${SONAR_TOKEN} || true
                        """
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è SonarQube ignor√©: ${e.message}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Construction Docker..."
                    try {
                        // V√©rifier que le Dockerfile existe
                        sh 'test -f Dockerfile && echo "‚úÖ Dockerfile trouv√©" || echo "‚ùå Dockerfile manquant"'
                        
                        // Build avec output d√©taill√©
                        sh """
                            docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} . 2>&1 | tee docker-build.log
                            docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                            docker images | grep ${DOCKER_IMAGE}
                        """
                        echo "‚úÖ Image cr√©√©e"
                    } catch (Exception e) {
                        echo "‚ùå Erreur Docker: ${e.message}"
                        sh 'cat docker-build.log || echo "Pas de log"'
                        error "Build Docker √©chou√©"
                    }
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    echo "üì§ Push DockerHub..."
                    try {
                        sh """
                            echo \${DOCKERHUB_CREDENTIALS_PSW} | docker login -u \${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                            docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                            docker push ${DOCKER_IMAGE}:latest
                            docker logout
                        """
                        echo "‚úÖ Images pouss√©es"
                    } catch (Exception e) {
                        error "Push √©chou√©: ${e.message}"
                    }
                }
            }
        }
    }

    post {
        success {
            echo """
                ‚úÖ ==========================================
                ‚úÖ üéâ PIPELINE R√âUSSIE! üéâ
                ‚úÖ ==========================================
                ‚úÖ Build: ${BUILD_NUMBER}
                ‚úÖ Image: ${DOCKER_IMAGE}:${DOCKER_TAG}
                ‚úÖ DockerHub: https://hub.docker.com/r/mohamedbelhaj/angular
                ‚úÖ ==========================================
            """
        }
        failure {
            echo """
                ‚ùå ==========================================
                ‚ùå PIPELINE √âCHOU√âE
                ‚ùå Build: ${BUILD_NUMBER}
                ‚ùå ==========================================
            """
        }
        always {
            script {
                try {
                    sh 'docker system prune -f || true'
                } catch (Exception e) {
                    echo "Nettoyage ignor√©"
                }
            }
        }
    }
}