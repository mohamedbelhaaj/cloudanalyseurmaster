pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('SONAR-TOKEN')
        SONAR_HOST_URL = 'http://host.docker.internal:9000'
        DOCKER_IMAGE = 'mohamedbelhaj/angular'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKER_HOST = 'tcp://host.docker.internal:2375'
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        NODE_VERSION = '18.20.8'
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "üì¶ Installing Node dependencies..."
                    npm install
                '''
            }
        }

        stage('Lint') {
            steps {
                sh '''
                    echo "üîç Running ESLint..."
                    npm run lint || true
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    echo "üß™ Running Angular tests..."
                    npm run test -- --watch=false --browsers=ChromeHeadless || true
                '''
            }
        }

        stage('Build Angular App') {
            steps {
                sh '''
                    echo "üî® Building Angular in production mode..."
                    npm run build -- --configuration production
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'SONAR-TOKEN', variable: 'SONAR_TOKEN')]) {
                        sh '''
                            echo "===== Testing SonarQube connection ====="
                            curl -s http://host.docker.internal:9000/api/system/status
                            
                            echo "===== Running SonarScanner ====="
                            sonar-scanner \
                                -Dsonar.projectKey=angular \
                                -Dsonar.sources=src \
                                -Dsonar.host.url=http://host.docker.internal:9000 \
                                -Dsonar.token="${SONAR-TOKEN}" \
                                -Dsonar.exclusions=**/node_modules/**,**/dist/**,**/*.spec.ts,**/*.test.ts \
                                -Dsonar.typescript.lcov.reportPaths=coverage/lcov.info \
                                -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            when {
                expression { return currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo "‚úÖ Quality Gate passed - proceeding to build"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "üê≥ Building Docker Image..."
                    docker build -t $DOCKER_IMAGE:$DOCKER_TAG .
                    docker tag $DOCKER_IMAGE:$DOCKER_TAG $DOCKER_IMAGE:latest
                    echo "‚úÖ Image created: $DOCKER_IMAGE:$DOCKER_TAG"
                    docker images | grep angular
                '''
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh '''
                    echo "üîê Logging in to Docker Hub..."
                    echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                    
                    echo "üì§ Pushing Docker Image..."
                    docker push $DOCKER_IMAGE:$DOCKER_TAG
                    docker push $DOCKER_IMAGE:latest
                    
                    echo "‚úÖ Push completed successfully!"
                '''
            }
        }

    }

    post {
        always {
            sh 'docker logout'
            cleanWs()
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
    }
}