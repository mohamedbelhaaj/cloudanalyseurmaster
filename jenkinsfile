pipeline {
    agent any

    environment {
        SONAR_AVAILABLE = 'false'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Angular') {
            steps {
                sh 'npm run build -- --configuration production'
            }
        }

        stage('Check SonarQube Availability') {
            steps {
                script {
                    try {
                        // Tester la connexion √† SonarQube
                        sh '''
                            if curl -s -f http://localhost:9000/api/system/status > /dev/null 2>&1; then
                                echo "‚úÖ SonarQube is available"
                                exit 0
                            else
                                echo "‚ö†Ô∏è SonarQube is not available"
                                exit 1
                            fi
                        '''
                        env.SONAR_AVAILABLE = 'true'
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è SonarQube non disponible, skip analysis"
                        env.SONAR_AVAILABLE = 'false'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { env.SONAR_AVAILABLE == 'true' }
            }
            steps {
                script {
                    def scannerHome = tool 'SonarScanner'
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=angular-app \
                            -Dsonar.projectName=angular-app \
                            -Dsonar.sources=src \
                            -Dsonar.exclusions=**/*.spec.ts,**/node_modules/**,**/dist/** \
                            -Dsonar.sourceEncoding=UTF-8
                        """
                    }
                }
            }
        }

        stage('Quality Gate') {
            when {
                expression { env.SONAR_AVAILABLE == 'true' }
            }
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    script {
                        try {
                            waitForQualityGate abortPipeline: false
                        } catch (Exception e) {
                            echo "‚ö†Ô∏è Quality Gate failed or timeout"
                            currentBuild.result = 'UNSTABLE'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'üèÅ Pipeline termin√©.'
        }
        success {
            echo '‚úÖ Build r√©ussi!'
        }
        unstable {
            echo '‚ö†Ô∏è Build instable (SonarQube non disponible ou Quality Gate failed)'
        }
        failure {
            echo '‚ùå Build √©chou√©!'
        }
    }
}