pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('SONAR-TOKEN')
        SONAR_HOST_URL = 'http://host.docker.internal:9000'
        DOCKER_IMAGE = 'mohamedbelhaj/angular-app'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKER_HOST = 'tcp://host.docker.internal:2375'
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        SONAR_AVAILABLE = 'false'
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'
            }
        }

        stage('Check SonarQube Availability') {
            steps {
                script {
                    try {
                        sh '''
                            echo "===== Testing SonarQube connection ====="
                            if curl -s -f http://host.docker.internal:9000/api/system/status > /dev/null 2>&1; then
                                echo "‚úÖ SonarQube is available"
                                exit 0
                            else
                                echo "‚ö†Ô∏è SonarQube is not available"
                                exit 1
                            fi
                        '''
                        env.SONAR_AVAILABLE = 'true'
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è SonarQube non disponible, skip analysis"
                        env.SONAR_AVAILABLE = 'false'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { env.SONAR_AVAILABLE == 'true' }
            }
            steps {
                script {
                    def scannerHome = tool 'SonarScanner'
                    withCredentials([string(credentialsId: 'SONAR-TOKEN', variable: 'SONAR-TOKEN')]) {
                        sh """
                            echo "===== Running SonarScanner for Angular ====="
                            ${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=angular-app \
                                -Dsonar.projectName=angular-app \
                                -Dsonar.sources=src \
                                -Dsonar.host.url=http://host.docker.internal:9000 \
                                -Dsonar.token=\${SONAR-TOKEN} \
                                -Dsonar.exclusions=**/*.spec.ts,**/node_modules/**,**/dist/**,**/*.test.ts \
                                -Dsonar.sourceEncoding=UTF-8 \
                                -Dsonar.typescript.lcov.reportPaths=coverage/lcov.info
                            echo "===== SonarQube analysis completed ====="
                        """
                    }
                }
            }
        }
stage('Quality Gate') {
            when {
                expression { return currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo "Quality Gate stage skipped for simplicity."
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "===== Building Docker Image for Angular ====="
                    docker build -t $DOCKER_IMAGE:$DOCKER_TAG .
                    docker tag $DOCKER_IMAGE:$DOCKER_TAG $DOCKER_IMAGE:latest
                    echo "===== Image created: $DOCKER_IMAGE:$DOCKER_TAG ====="
                    docker images | grep angular-app
                '''
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh '''
                    echo "===== Logging in to Docker Hub ====="
                    echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                    
                    echo "===== Pushing Docker Image ====="
                    docker push $DOCKER_IMAGE:$DOCKER_TAG
                    docker push $DOCKER_IMAGE:latest
                    
                    echo "===== Push completed successfully ====="
                '''
            }
        }

    }

    post {
        always {
            echo 'üèÅ Pipeline termin√©.'
            sh 'docker logout'
        }
        success {
            echo '‚úÖ Build et d√©ploiement r√©ussis!'
        }
        unstable {
            echo '‚ö†Ô∏è Build instable (SonarQube Quality Gate √©chou√©)'
        }
        failure {
            echo '‚ùå Build √©chou√©!'
        }
        cleanup {
            cleanWs()
        }
    }
}