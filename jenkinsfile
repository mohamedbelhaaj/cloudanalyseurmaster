pipeline {
    agent any



    environment {
        SONAR_SCANNER = tool 'SonarScanner'   // Nom dans Jenkins → Global Tool Configuration
    }

    stages {

        stage('Checkout') {
            steps {
                      git url: 'https://github.com/mohamedbelhaaj/cloudanalyseurmaster.git', branch: 'main'

            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Angular') {
            steps {
                sh 'npm run build --prod'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {   // Nom du serveur dans Jenkins → Configure System
                    sh """
                        ${SONAR_SCANNER}/bin/sonar-scanner \
                        -Dsonar.projectKey=angular-app \
                        -Dsonar.sources=src \
                        -Dsonar.exclusions=**/*.spec.ts,**/environments/* \
                        -Dsonar.tests=src \
                        -Dsonar.test.inclusions=**/*.spec.ts \
                        -Dsonar.sourceEncoding=UTF-8
                    """
                }
            }
        }

        stage("Quality Gate") {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé.'
        }
    }
}
